@model CMS.ViewModel.UserViewModel
@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <script type="text/javascript">

        $(document).ready(function () {
            $('#datatable1').DataTable({
                bAutoWidth: false,
                "aoColumns": [
                  null,
                  null, null, null, null,
                  { "bSortable": false }
                ],
                "displayLength": 50,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Vietnamese.json"
                }


            });
            $('.delete').click(function (e) {
                e.preventDefault();
                $(".delete-selected").removeClass("delete-selected");
                $(this).addClass("delete-selected");
            });
            $('#submitDelete').click(function () {
                var id = $('.delete-selected').data("id");
                document.location.href = '/User/RemoveUser/' + id;
            });
        });

    </script>
}
@section menu{

}
@section featured{
    <div class="page-content">
        <div class="page-content-area">
            <div class="row">
                <div class="col-xs-12">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger message-box ">
                            <strong>Lỗi:</strong> @TempData["Error"].ToString()
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success message-box ">
                            <strong>Thông báo:</strong> @TempData["Success"].ToString()
                        </div>
                    }
                    <h3 class="header smaller lighter blue">@ViewBag.TitleForm</h3>
                    <div class="table-header">
                        Danh sách người dùng
                        <div class="widget-toolbar">
                            <div class="widget-menu">
                                <a class="white" href="/User/Create" title="Thêm người dùng">
                                    <i class="ace-icon fa fa-plus-square bigger-130"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <table id="datatable1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên người dùng</th>
                                <th>Tên đăng nhập</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Trạng thái</th>
                                <th>Quản lý bởi</th>
                                <th class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.UserList.Count > 0)
                            {
                                foreach (var u in Model.UserList)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => u.FullName)</td>
                                        <td>@Html.DisplayFor(m => u.UserName)</td>
                                        <td>@Html.DisplayFor(m => u.Phone)</td>
                                        <td>@Html.DisplayFor(m => u.Email)</td>
                                        <td>@Html.Raw(u.IsMember == true ? "Kích hoạt" : "Chưa được duyệt")</td>
                                        <td>@Html.DisplayFor(m => u.ManagerBy)</td>
                                        <td class="text-center">
                                            <div class="hidden-sm hidden-xs action-buttons">
                                                <a class="green" href="/User/Edit/@u.Id">
                                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                </a>

                                                <a class="red delete" href="#" data-toggle="modal" data-target="#confirm-delete" data-id="@u.Id">
                                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                </a>
                                            </div>

                                            <div class="hidden-md hidden-lg">
                                                <div class="inline position-relative">
                                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                        <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                    </button>

                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                        <li>
                                                            <a href="/User/Edit/@u.Id" class="tooltip-success" data-rel="tooltip" title="Sửa">
                                                                <span class="green">
                                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a href="#" class="tooltip-error" data-rel="tooltip" title="Xóa" data-toggle="modal" data-target="#confirm-delete" data-id="@u.Id">
                                                                <span class="red">
                                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                                </span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">Xác nhận xóa dữ liệu</h4>
                </div>
                <div class="modal-body">
                    <p>Dữ liệu người dùng bị xóa không thể phục hồi</p>
                    <p>Bạn có chắc chắn xóa người dùng ngày</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger btn-ok" id="submitDelete">OK</button>
                </div>
            </div>
        </div>
    </div>

}
