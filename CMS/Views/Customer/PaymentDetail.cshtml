@model List<CMS.ViewModel.PaymentHistoryModel>
<div class="col-xs-12">
    <h3 class="header smaller lighter blue">Lịch sử giao dịch</h3>
    <div class="table-header">
        Lịch sử
    </div>
    <table id="HistoryPayment" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ngày giao dịch</th>
                <th>Loại giao dịch</th>
                <th>Số tiền giao dịch</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                int counter = 0;
                foreach (var u in Model)
                {
                    counter = counter + 1;
                    <tr>
                        <td class="text-center">@counter</td>
                        <td>@u.DateString</td>
                        <td>@u.PaymentMethod</td>
                        <td>@u.Amount</td>
                        <td>@u.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <a href="#" onclick="return LoadMore();">Xem thêm lịch sử</a>
    </div>
</div>
