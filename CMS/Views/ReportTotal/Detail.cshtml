@model CMS.ViewModel.ReportTotalViewModel
@{
    ViewBag.Title = "Báo cáo thu tiền khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}
@section header{

}

@section featured{
    <div class="page-content">
        <div class="page-content-area">
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="header smaller lighter blue">Thông tin chi tiết lịch sử giao dịch theo ngày</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="datatable1" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Ngày giao dịch</th>
                                        <th>Khách giao dịch</th>
                                        <th>Loại giao dịch</th>
                                        <th>Số tiền giao dịch</th>
                                        <th>Ghi chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ReportDetail)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@item.CustomerName</td>
                                            <td>@item.Payment</td>
                                            <td>@item.Amount.ToString("#,#")</td>
                                            <td>@item.Note</td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}