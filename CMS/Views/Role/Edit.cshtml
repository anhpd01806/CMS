
@model CMS.ViewModel.RoleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section featured
{

    @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
    {
        <div class="page-content">
            <div class="page-content-area">
                <div class="row">
                    <div class="col-xs-12">
                        <h3 class="header smaller lighter blue">@ViewBag.TitleForm</h3>
                        <div class="form col-md-6" role="form">
                            <div class="form-group">
                                @Html.HiddenFor(m => m.Id)
                                <label>Tên nhóm quyền</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                            <div class="clearfix form-actions">
                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-info" type="submit">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Cập nhật
                                    </button>

                                    &nbsp; &nbsp; &nbsp;
                                    <button class="btn" type="reset" id="cancel">
                                        <i class="ace-icon fa fa-undo bigger-110"></i>
                                        Hủy bỏ
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }
}

