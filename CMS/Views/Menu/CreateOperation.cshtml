@model CMS.ViewModel.MenuOperationViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section featured
{
    @using (Html.BeginForm("CreateOperation", "Menu", FormMethod.Post))
    {

        @Html.ValidationSummary(true)
        <div class="page-content">
            <div class="page-content-area">
                <div class="page-header">
                    <h1 class="page-title">@ViewBag.TitleForm</h1>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger message-box ">
                                <strong>Lỗi:</strong> @TempData["Error"].ToString()
                            </div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success message-box ">
                                <strong>Thông báo:</strong> @TempData["Success"].ToString()
                            </div>
                        }
                        <div class="form col-md-6" role="form">
                            <div class="form-group">
                                <label>Mô tả</label>
                                @Html.TextBoxFor(m => m.Operation.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Operation.Name)
                            </div>
                            <div class="form-group">
                                <label>Controller</label>
                                @Html.TextBoxFor(m => m.Operation.Controller, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Action</label>
                                @Html.TextBoxFor(m => m.Operation.Action, new { @class = "form-control" })
                            </div>
                            @if (Model.SelectListItem != null)
                            {
                                <div class="form-group">
                                    <label>Chức năng</label>
                                    @Html.DropDownListFor(m => m.Operation.MenuId, Model.SelectListItem as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                </div>
                            }
                            <div class="form-group">
                                <label>Thứ tự</label>
                                @Html.TextBoxFor(m => m.Operation.Order, new { @class = "form-control" })
                            </div>
                            <div class="clearfix form-actions">
                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-info" type="submit">
                                        <i class="ace-icon fa fa-check bigger-110"></i>
                                        Thêm mới
                                    </button>

                                    &nbsp; &nbsp; &nbsp;
                                    <button class="btn" type="reset">
                                        <i class="ace-icon fa fa-undo bigger-110"></i>
                                        Hủy bỏ
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}